<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<!--<?import javafx.scene.control.ListView?>-->

<?import javafx.scene.layout.VBox?>

<VBox fx:id="dailyVBox" prefHeight="440.0" prefWidth="900.0" stylesheets="@../css/DailyTableView.css" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nii.desktop.controller.DailyTableViewController">
   <children>
      <HBox fx:id="dailyHbox">
         <children>
            <GridPane prefHeight="30.0" prefWidth="900.0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="53.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="211.0" minWidth="10.0" prefWidth="171.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="223.0" minWidth="9.0" prefWidth="9.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="223.0" minWidth="10.0" prefWidth="59.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="215.0" minWidth="10.0" prefWidth="191.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="212.0" minWidth="8.0" prefWidth="15.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="138.0" minWidth="10.0" prefWidth="33.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="169.0" minWidth="10.0" prefWidth="169.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="81.0" minWidth="10.0" prefWidth="46.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="117.0" minWidth="10.0" prefWidth="105.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox fx:id="operationHBox" GridPane.columnIndex="9">
                     <children>
                        <Button fx:id="addDailyBtn" mnemonicParsing="false" onAction="#addDailyAction" text="新建" />
                        <Button fx:id="delDailyBtn" mnemonicParsing="false" onAction="#deleteDailyAction" text="删除" />
                     </children>
                  </HBox>
                  <Label text="用户编号" />
                  <TextField fx:id="userNoTextField" prefHeight="23.0" prefWidth="132.0" GridPane.columnIndex="1" />
                  <Label text="生产任务单" GridPane.columnIndex="3" />
                  <TextField fx:id="billNoTextField" GridPane.columnIndex="4" />
                  <Label text="日期" GridPane.columnIndex="6" />
                  <DatePicker fx:id="datePicker" prefHeight="23.0" prefWidth="164.0" GridPane.columnIndex="7" />
                  <Button mnemonicParsing="false" text="搜索" onAction="#searchDailyAction" GridPane.columnIndex="8" />
               </children>
            </GridPane>
         </children>
      </HBox>
      <TableView fx:id="dailyTableView" prefHeight="400.0" prefWidth="856.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="selectCol" prefWidth="30.0" text="勾选" />
          <TableColumn fx:id="dailyNoCol" text="生产日报编号" />
          <TableColumn fx:id="billNoCol" text="生产任务单号" />
          <TableColumn fx:id="materialCodeCol" text="物料代码" />
          <TableColumn fx:id="materialNameCol" text="物料名称" />
          <TableColumn fx:id="modelCol" text="规格型号" />
          <TableColumn fx:id="planQuantityCol" text="计划生产数量" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <!-- 
      <Pagination fx:id="dailyTablePagination" prefHeight="9.0" prefWidth="615.0" />  -->
   </children>
</VBox>
